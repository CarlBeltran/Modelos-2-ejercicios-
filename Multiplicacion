def multi(n,m):
    if m==1:
      return n
    elif m==0:
      return 0
    else:
        return n+multi(n,m-1)
try:
    b= int(input("�Cual es el numero base?"))
    e= int (input("�Cual es el exponente?"))
    calculo= multi(b,e)
    print "el resultado de", b ,"a la", e , "es", calculo
except:
	print "Se requiere un valor numerico"

